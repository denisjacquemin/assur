.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("assur.general.list")}", brands_path
      %li.active= link_to "#{t("assur.general.new")}", new_brand_path
  .content
    %h2.title
      = t("assur.general.new")
      = t("assur.brand.product")
    .inner
      = form_for @brand, :url => brands_path, :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f }
- content_for :sidebar, render(:partial => 'new_sidebar')
