.group
  = f.label :name, :class => 'label'
  = f.text_field :name, :class => 'text_field'
.group
  = f.label :company_id, :class => 'label'
  = f.collection_select(:company_id, Company.all, :id, :name, :prompt => t('assur.brand.select_company'))
  :javascript
      new NiceSelect('brand_company_id', 'Ajouter companie...');
.group
  = f.label :category_id, :class => 'label'
  = f.collection_select(:category_id, Category.all, :id, :name)
  :javascript
      new NiceSelect('brand_category_id', 'Ajouter categorie...');  
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("assur.general.save")}")
    = t("assur.general.save")
  = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("assur.general.cancel")}") + " " + t("assur.general.cancel"), brands_path, :class => "button"

