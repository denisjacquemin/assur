.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("assur.general.list")}", brands_path
      %li= link_to "#{t("assur.general.new")}", new_brand_path
      %li.active= link_to t("assur.general.details"), edit_brand_path
  .content
    %h2.title
      = t("assur.general.Details")
      = t("assur.brand.products")
    .inner
      = form_for @brand, :url => brand_path(@brand), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f }
- content_for :sidebar, render(:partial => 'edit_sidebar')
