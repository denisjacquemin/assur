.block
  .content
    %h2.title Inscription
    .inner
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form login'}) do |f|
        .group
          .columns.wat-cf
            = f.label :email, :class => 'label'
            = f.text_field :email, :class => 'text_field focus'
        .group
          .columns.wat-cf
            = f.label :password, :class => 'label'
            = f.password_field :password, :class => 'text_field'
        .group
          .columns.wat-cf
            = f.label :password_confirmation, :class => 'label'
            = f.password_field :password_confirmation, :class => 'text_field'        
        - if devise_mapping.rememberable?
        .group
          .columns.wat-cf
            = f.check_box :remember_me
            = f.label :remember_me
        .group.wat-cf.navform
          %button.button{:type => "submit"}
            = image_tag("web-app-theme/icons/key.png", :alt => "#{t("web-app-theme.login", :default => "Login")}")
            = t("web-app-theme.login", :default => "Login")
  - content_for :sidebar, render(:partial => 'customers/sidebar')
