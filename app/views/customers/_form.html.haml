.group
  = f.label :firstname, t("activerecord.attributes.customer.firstname", :default => "Firstname"), :class => :label
  = f.text_field :firstname, :class => 'text_field'
.group
  = f.label :lastname, t("activerecord.attributes.customer.lastname", :default => "Lastname"), :class => :label
  = f.text_field :lastname, :class => 'text_field'
.group
  .columns.wat-cf.custform1 
    .one
      = f.label :birthdate, t("activerecord.attributes.customer.birthdate", :default => "Birthdate"), :class => :label
      = f.date_select :birthdate, :class => 'date_select'
    .two
      = f.fields_for :sex do |s|
        = s.label :name, t("activerecord.attributes.sex.name", :default => 'Gender'), :class => :label
        = collection_select('customer_sex', :sex_id, Sex.all, :id, :name, :prompt => 'Please select a gender')
    .three
      = f.fields_for :civilstatus do |c|
        = c.label :name, t("activerecord.attributes.civilstatus.name", :default => 'Civil Status'), :class => :label
        = collection_select('customer_civilstatus', :civilstatus_id, Civilstatus.all, :id, :name, :prompt => 'Please select a civil status')
.group
  .columns.wat-cf.custform1 
    .one
      = f.fields_for :nationality do |n|
        = n.label :name, t("activerecord.attributes.nationality.name", :default => 'Nationality'), :class => :label
        = collection_select('customer_nationality', :nationality_id, Nationality.all, :id, :name, :prompt => 'Please select a nationality')

    .two
      = f.fields_for :language do |l|
        = l.label :name, t("activerecord.attributes.language.name", :default => 'Language'), :class => :label
        = collection_select('customer_language', :language_id, Language.all, :id, :name, :prompt => 'Please select a language')
= f.fields_for :address do |a|
  .fieldset
    .group
      .columns.wat-cf 
        .verylargecolumn.left
          = a.label :street, t("activerecord.attributes.address.street", :default => 'Street'), :class => :label
          = a.text_field :street, :class => 'text_field'
        .verysmallcolumn.right
          = a.label :number, t("activerecord.attributes.address.number", :default => 'Number'), :class => :label
          = a.text_field :number, :class => 'text_field'
    .group
      .columns.wat-cf 
        .column.left     
          = a.label :box, t("activerecord.attributes.address.box", :default => 'Box'), :class => :label
          = a.text_field :box, :class => 'text_field'
        .column.right
          = a.label :zipcode, t("activerecord.attributes.address.zipcode", :default => 'Zip code'), :class => :label
          = a.text_field :zipcode, :class => 'text_field'        
    .group
      .columns.wat-cf 
        .column.left     
          = a.label :city, t("activerecord.attributes.address.city", :default => 'City'), :class => :label
          = a.text_field :city, :class => 'text_field'
        = a.fields_for :country do |c|
          .column.right
            = c.label :name, t("activerecord.attributes.country.name", :default => 'Country'), :class => :label
            = c.text_field :name, :class => 'text_field'
= f.fields_for :contact do |c|
  .fieldset
    .group
      = c.fields_for :title do |t|
        = t.label :name, t("activerecord.attributes.title.name", :default => 'Title'), :class => :label
        = collection_select('customer_contact', :title_id, Title.all, :id, :name, :prompt => 'Please select a title')
    .group
      .columns.wat-cf 
        .column.left
          = c.label :primary_email, t("activerecord.attributes.contact.primary_email", :default => "E-mail 1"), :class => :label
          = c.text_field :primary_email, :class => 'text_field'
          %span.description Ex: george.dupont@example.com
        .column.right
          = c.label :secondary_email, t("activerecord.attributes.contact.secondary_email", :default => "E-mail 2"), :class => :label
          = c.text_field :secondary_email, :class => 'text_field'
          %span.description Ex: george.dupont@boulot.be     
    .group
      .columns.wat-cf 
        .column.left
          = c.label :private_phone, t("activerecord.attributes.contact.private_phone", :default => "Private Phone"), :class => :label
          = c.text_field :private_phone, :class => 'text_field'
        .column.right
          = c.label :office_phone, t("activerecord.attributes.contact.office_phone", :default => "Office Phone"), :class => :label
          = c.text_field :office_phone, :class => 'text_field'
    .group
      .columns.wat-cf 
        .column.left
          = c.label :cellphone, t("activerecord.attributes.contact.cellphone", :default => "Cellphone"), :class => :label
          = c.text_field :cellphone, :class => 'text_field'
        .column.right
          = c.label :fax, t("activerecord.attributes.contact.fax", :default => "Fax"), :class => :label
          = c.text_field :fax, :class => 'text_field'
