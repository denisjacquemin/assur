.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "Liste")}", customers_path
      %li= link_to "#{t("web-app-theme.new", :default => "Nouveau")}", new_customer_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Details")}", edit_customer_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Details")
      client
    .inner
      = form_for @customer, :url => customer_path(@customer), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
